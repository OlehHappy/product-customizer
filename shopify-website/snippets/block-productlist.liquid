<div id="productlist{{ block-productlist }}" class="products_block exclusive" >
	{% if settings.home_productlist_titletab != blank %}
		<h4 class="page-subheading">
          {{ settings.home_productlist_titletab }} | <a href="/collections/new-products-all-products"><span style="font-size: 14px; color: #D82634;">View Full Collection ></span></a>
		</h4>
	{% endif %}
	<div class="block_content">
		{% assign collection_produclists = collections[settings.home_productlists_collection].products %}
		{% if settings.home_productlists_type == 'boostrap_carousel' %}
			{% capture product_carousel %}product_list_00{{ block-productlist }}{% endcapture %}
			{% include 'product-carousel' %}
		{% else %}
			{% include 'product-carousel-owl' %}
		{% endif %}
	</div>
</div>
<script type="text/javascript">
	$(document).ready(function() {
		{% if settings.home_productlists_type == 'boostrap_carousel' %}
	    $('#productlist{{ block-productlist }}').each(function(){
	        $(this).carousel({
	            pause: 'hover',
	            interval: {{ settings.home_productlists_interval }}
	        });
	    });
	    {% else %}
	    	$("#productlist{{ block-productlist }} .owl-carousel").each(function(){
    		  	$(this).owlCarousel({
    		      	items : 4,
    		      	itemsDesktop : [1199, 2],
			        itemsDesktopSmall : [979, 2],
			        itemsTablet : [768, 2],
			        itemsTabletSmall : false,
			        itemsMobile : [479, 1],
    		      	lazyLoad : true,
    		      	responsive : true,
    		      	navigation : true,
    		      	afterInit : SetOwlCarouselFirstLast,
			        afterAction : SetOwlCarouselFirstLast,
			        addClassActive : true,
		      	}); 
    		});
    		function SetOwlCarouselFirstLast(el){
			  el.find(".owl-item").removeClass("first");
			  el.find(".owl-item.active").first().addClass("first");

			  el.find(".owl-item").removeClass("last");
			  el.find(".owl-item.active").last().addClass("last");
			};
	    {% endif %}
	});
</script>