    <script>
        window.appName = '@Shopify.Environment.AppName';
        window.ContentRoot = '@Shopify.ContentLocation.GetPath("")';
        window.OptionRoot = '@Shopify.ContentLocation.OptionContent_GetPath("")';
        window.CatalogRoot = '@Shopify.ContentLocation.CatalogContent_GetPath("")';
        window.LightboxRoot = '@Shopify.ContentLocation.LightboxImageContent_GetPath("")';
        window.ProductImageRoot = '@Shopify.ContentLocation.ProductImageContent_GetPath("")';
        window.ContentVersion = '@System.Configuration.ConfigurationManager.AppSettings["productImageUpdateDate"]';
        window.CustomerID = '{{customer.id}}';
    </script>
    @if (!Shopify.Environment.IsDevelopment)
    {
        @:{% layout none %} <!--SHOPIFY LIQUID TAG must be rendered without a layout -->
        @:{% raw %} <!-- allow for underscore templates not conflicting with liquid-->
